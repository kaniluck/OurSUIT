 .main-visual {
  background-image: image-url("main.jpg");
  height: 500px;
  background-size:cover;
 }

 .catch-copy {
  position: absolute;
  right: 120px;
  top: 240px;
  font-size: 60px;
  color: #fff;
  text-shadow: 5px 5px 0px #707070, 7px 7px 0px #130012;
 }

 .search-index {
  display: flex;
  flex-wrap: wrap;
  align-items:stretch;
  justify-content:space-around;
  flex-direction:row;
  align-content:stretch;
}

.search-index-items {
  width: 30%;
  height: 30%;
}

#about {
  background-image: image-url("logo.png");
  height: 79px;
  width: 167px;
  background-size:cover;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80px;
  margin-bottom: 30px;
 }

 .sub-visual {
  background-image: image-url("sub.jpg");
  height: 640px;
  width: 960px;
  background-size:100%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80px;
  margin-bottom: 30px;
 }

 .sub {
  background: linear-gradient(to bottom, #FFF, #CCCCCC);
  position: relative;
 }

