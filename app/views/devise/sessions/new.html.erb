<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-info py-4 mb-0">ログイン</h4>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class:"col-6 col-form-label" %>
            <%= f.email_field :email, autofocus: true, class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, "パスワード", class:"col-6 col-form-label" %>
            <%= f.password_field :password, autofocus: true, class:"form-control" %>
          </div>
          <%= f.submit "ログイン", class:"btn btn-block btn-success mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <p class="text-center">アカウント作成は</p>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <p class="text-center"><%= link_to "こちら", new_user_registration_path %>から。</p>
    </div>
  </div>
</div>