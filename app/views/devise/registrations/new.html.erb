<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-info py-4 mb-0">新規登録</h4>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mb-3">
            <%= f.label :name, "ニックネーム", class:"col-6 col-form-label" %>
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class:"col-6 col-form-label" %>
            <%= f.email_field :email, autofocus: true, class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, "パスワード", class:"col-6 col-form-label" %>
            <%= f.password_field :password, autofocus: true, class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード確認", class:"col-6 col-form-label" %>
            <%= f.password_field :password_confirmation, autofocus: true, class:"form-control", placeholder:"もう一度入力" %>
          </div>
          <%= f.submit "登録", class:"btn btn-block btn-success mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <p class="text-center">すでにアカウントをお持ちの方は</p>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <p class="text-center"><%= link_to "こちら", new_user_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>