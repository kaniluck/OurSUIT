<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-info py-4 mb-0">フォロワー</h5>
      <div class="body bg-light p-4">
        <% if @users.exists? %>
          <table class='table'>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= link_to user_path(user) do %>
                    <%= attachment_image_tag(user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle") %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td>
                    <% if current_user != user %>
                      <% if current_user.following?(user) %>
                        <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
                      <% else %>
                        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-secondary" %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>