<table class='table'>
  <tr>
    <%= link_to user_path(user) do %>
    <%= attachment_image_tag(user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle") %>
    <% end %>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>intro</th>
	  <th><%= user.intro %></th>
  </tr>
  <tr>
    <% if current_user == user %>
    <th><%= link_to 'プロフィールを編集',edit_user_path(user),class: "btn btn-outline-dark btn-block edit_user_#{user.id}" %></th>
    <% end %>
  </tr>
  <tr>
    <th><%= link_to "ブックマーク", root_path %></th>
  </tr>
  <tr>
    <th><%= link_to "いいね一覧", root_path %></th>
  </tr>
  <tr>
    <th><%= link_to user_followings_path(user), remote: true do %>フォロー中<% end %></th>
  </tr>
  <tr>
    <th><%= link_to user_followers_path(user), remote: true do %>フォロワー<% end %></th>
  </tr>
  <tr>
    <th>
      <% if current_user != user %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-secondary" %>
        <% end %>
      <% end %>
    </th>
  </tr>
</table>