<div class="container-fluid">
  <div class='row'>
    <div class='col-md-3'>
      <div class="user_info">
        <%= render 'info', user: @user %>
      </div>
    </div>
    <div class='offset-md-1 col-md-6 text-center shadow-lg rounded px-0 my-5'>
      <h5 class="text-dark bg-light py-4 mb-0">プロフィールを編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @user, local: true do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ユーザー名"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-comment"></i></span>
            </div>
            <%= f.text_field :intro, autofocus: true, class:"form-control", id:"inputIntro", placeholder:"自己紹介"%>
          </div>
          <%= attachment_image_tag @user, :profile_image, size: "80x80", fallback: "no_image.jpg", class:"mb-3" %>
          <div class="input-group my-3">
            <label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>
            </label>
          </div>
          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>