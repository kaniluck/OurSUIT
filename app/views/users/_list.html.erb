<div class='row'>
  <div class="offset-md-2 col-md-7">
    <% posts.each do |post| %>
    <div class="card w-30 mx-auto mt-4 shadow-lg">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, size: "60x60", format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            <% end %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to(post_path(post.id), class:"text-dark") do %>
                <strong><i class="fab fa-black-tie"></i><span> <%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text"><i class="fas fa-comment-dots"></i> <%= post.text %></p>
            <span><i class="fas fa-user-tie"></i> <%= post.user.name %> ｜ <%= render "likes/like-btn", post: post %> ｜ </span>
            <span><%= link_to "コメント #{post.post_comments.count}", post_path(post.id), class:"text-dark" %> ｜ </span>
            <span><i class="fa fa-calendar"></i> <%= post.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>