<div class='row'>
  <div class="offset-md-2 col-md-7">
    <% posts.each do |post| %>
    <div class="card w-30 mx-auto mt-4 shadow-lg">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag post.user, :profile_image, size: "60x60", fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to(post_path(post.id), class:"text-dark") do %>
                <strong><i class="fab fa-black-tie"></i><span> <%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text">説明：<%= post.text %></p>
            <span><i class="fas fa-user-tie"></i> By <%= post.user.name %> ｜ </span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>