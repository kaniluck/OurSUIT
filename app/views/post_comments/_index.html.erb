<% post.post_comments.each do |post_comment| %>
  <div class="media border mb-3">
    <div class="media-body ml-1 p-2">
      <div>
        <%= attachment_image_tag post_comment.user, :profile_image, size: "50x50", fallback: "no_image.jpg" %><%= post_comment.created_at.strftime('%Y/%m/%d') %>
      </div>
      <p><%= post_comment.comment %></p>
      <% if post_comment.user == current_user %>
        <div class="text-right">
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>